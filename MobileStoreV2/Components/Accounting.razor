    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Cancel" Class="px-10">Close</MudButton>

    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance MudDialog { get; set; }

    int timesBackDropClicked;
    void HandleBackdropClick(MouseEventArgs eArgs)
    {
        timesBackDropClicked++;

    }

    private bool showInnerComponent = false;
    private readonly DialogOptions _dialogOptions = new() { FullWidth = true };
    private void OpenDialog() => showInnerComponent = true;
    private void Cancel() => showInnerComponent = false;

}