@page "/card1"

<style>
    /* From Uiverse.io by alexruix */
    .card {
        border-radius: 20px;
        background: #f5f5f5;
        position: relative;
        padding: 1.8rem;
        border: 2px solid #c3c6ce;
        transition: 0.5s ease-out;
        overflow: visible;
    }

    .card-details {
        color: black;
        height: 100%;
        gap: .5em;
        display: grid;
        place-content: center;
    }

    .card-button {
        transform: translate(-50%, 125%);
        width: 60%;
        border-radius: 1rem;
        border: none;
        background-color: #008bf8;
        color: #fff;
        font-size: 1rem;
        padding: .5rem 1rem;
        position: absolute;
        left: 50%;
        bottom: 0;
        opacity: 0;
        transition: 0.3s ease-out;
    }

    .text-body {
        color: rgb(134, 134, 134);
    }

    /*Text*/
    /*     .text-title {
                        font-size: 1.5em;
                        font-weight: bold;
                    }
                 */
    /*Hover*/
    .card:hover {
        border-color: #008bf8;
        box-shadow: 0 4px 18px 0 rgba(0, 0, 0, 0.25);
    }

        .card:hover .card-button {
            transform: translate(-50%, 50%);
            opacity: 1;
        }


    /* show onclick start */
    /* From Uiverse.io by eslam-hany */
    .card-show {
        position: relative;
        width: 220px;
        height: 320px;
        background: #cad7ff;
        display: flex;
        /*         align-items: center;
                        justify-content: center;
                        font-size: 25px;
                        font-weight: bold; */
        border-radius: 15px;
        cursor: pointer;
    }

        .card-show::before,
        .card-show::after {
            position: absolute;
            content: "";
            width: 20%;
            height: 20%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 25px;
            font-weight: bold;
            background-color: #9bade6;
            transition: all 0.5s;
        }

        .card-show::before {
            top: 0;
            right: 0;
            border-radius: 0 15px 0 100%;
        }

        .card-show::after {
            bottom: 0;
            left: 0;
            border-radius: 0 100% 0 15px;
        }

        .card-show:hover::before,
        .card-show:hover:after {
            width: 100%;
            height: 100%;
            border-radius: 15px;
            transition: all 0.5s;
        }

    .card-hover:hover:after {
        content: "";
    }





    /* show onclick end */
</style>
